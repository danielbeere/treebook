<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
<%= @status.user.full_name %>
</p>

<p>
  <b>Content:</b>
  <%= @status.content %>
</p>

<% if (user_signed_in?) && (@status.user.full_name == current_user.full_name) %>
	<%= link_to 'Edit', edit_status_path(@status) %> |
	<%= link_to 'Back', statuses_path %>
<% end %>
